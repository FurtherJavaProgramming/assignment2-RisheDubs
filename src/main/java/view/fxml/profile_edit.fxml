<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ProfileEditController" alignment="CENTER" hgap="10" vgap="10">
    
    <Label text="First Name:"/>
    <TextField fx:id="firstNameField"/>
    
    <Label text="Last Name:"/>
    <TextField fx:id="lastNameField"/>
    
    <Label text="Password:"/>
    <PasswordField fx:id="passwordField"/>
    
    <Button text="Save" onAction="#saveProfileChanges"/>
    <Button text="Back" onAction="#returnToDashboard"/>
    
</GridPane>
