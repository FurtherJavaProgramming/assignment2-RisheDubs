<GridPane fx:controller="controller.RegisterController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">
    <!-- Register Form UI -->
    <TextField fx:id="usernameField" GridPane.rowIndex="0" />
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" />
    <Label fx:id="messageLabel" GridPane.rowIndex="2" />
    <Button text="Register" onAction="#handleRegister" GridPane.rowIndex="3" />
</GridPane>
