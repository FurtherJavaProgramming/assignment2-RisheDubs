<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController" hgap="10" vgap="10">
    <Label text="New Username:"/>
    <TextField fx:id="newUsernameField" GridPane.columnIndex="1"/>

    <Label text="New Password:" GridPane.rowIndex="1"/>
    <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Register" onAction="#handleRegister" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label fx:id="registerMessageLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
</GridPane>
