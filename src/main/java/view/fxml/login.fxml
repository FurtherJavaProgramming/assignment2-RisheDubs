<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Username:"/>
        <TextField fx:id="usernameField" promptText="Enter Username" prefWidth="200"/>
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Password:"/>
        <PasswordField fx:id="passwordField" promptText="Enter Password" prefWidth="200"/>
    </HBox>
    <VBox alignment="CENTER" spacing="10">
        <Button text="Login" onAction="#handleLogin" prefWidth="100"/>
        <Button text="Register" onAction="#handleRegister" prefWidth="100"/>
    </VBox>
</VBox>
