<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminController" spacing="10" prefWidth="600.0" prefHeight="600.0">
    <children>
        <!-- Table for displaying all books -->
        <TableView fx:id="booksTable" prefHeight="400.0" prefWidth="580.0">
            <columns>
                <TableColumn fx:id="titleColumn" text="Title" prefWidth="150.0" />
                <TableColumn fx:id="authorsColumn" text="Author" prefWidth="150.0" />
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100.0" />
                <TableColumn fx:id="soldCopiesColumn" text="Sold Copies" prefWidth="100.0" />
                <TableColumn fx:id="stockColumn" text="Remaining Stock" prefWidth="100.0" />
            </columns>
        </TableView>

        <!-- Input and buttons for updating stock -->
        <TextField fx:id="stockField" promptText="New Stock" prefWidth="100.0"/>
        <Button fx:id="updateStockButton" text="Update Stock" onAction="#handleUpdateStock" prefWidth="150.0" />
    </children>
</VBox>
