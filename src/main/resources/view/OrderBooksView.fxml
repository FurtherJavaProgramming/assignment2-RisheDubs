<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OrderBooksController">
    <children>
        <Label text="Available Books" style="-fx-font-size: 20px;" />
        <ListView fx:id="availableBooksListView" prefHeight="300.0" prefWidth="400.0" />
        <Label text="Select Quantity" />
        <TextField fx:id="quantityField" promptText="Enter quantity" />
        <Button text="Add to Cart" onAction="#handleAddToCart" />
        <Button text="Go to Cart" onAction="#goToCart" />
        <Label fx:id="statusLabel" />
    </children>
</VBox>
