<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CheckoutController" alignment="CENTER" spacing="10.0">
    <children>
        <Label text="Checkout" style="-fx-font-size: 20px;" />
        <Label fx:id="totalPriceLabel" text="Total Price: $" />

        <Label text="Enter Credit Card Information" style="-fx-font-size: 16px;" />
        <TextField fx:id="cardNumberField" promptText="Card Number (16 digits)" />
        <TextField fx:id="expiryDateField" promptText="Expiry Date (MM/YY)" />
        <TextField fx:id="cvvField" promptText="CVV (3 digits)" />

        <Button text="Confirm Payment" onAction="#handleConfirmPayment" />

        <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
    </children>
</VBox>
